---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.jsx';
---

<Layout title="Contact - Azorean Studios">
  <Navigation client:load />
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <span class="hero-label">GET IN TOUCH</span>
          <h1>Let's Create Together</h1>
          <p class="hero-description">
            Ready to explore the intersection of technology, sound, and consciousness? 
            We'd love to hear about your vision and discuss how we can collaborate.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form & Info -->
    <section class="contact-section">
      <div class="container">
        <div class="contact-content">
          <!-- Contact Form -->
          <div class="contact-form">
            <h2>Start a Conversation</h2>
            <form action="#" method="POST" class="form">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required />
              </div>
              
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required />
              </div>
              
              <div class="form-group">
                <label for="project-type">Project Type</label>
                <select id="project-type" name="project-type" required>
                  <option value="">Select a project type</option>
                  <option value="technology">Technology & Apps</option>
                  <option value="music">Music & Audio</option>
                  <option value="events">Events & Community</option>
                  <option value="studio">Studio Recording</option>
                  <option value="other">Other Collaboration</option>
                </select>
              </div>
              
              <div class="form-group">
                <label for="message">Tell us about your vision</label>
                <textarea id="message" name="message" rows="6" required placeholder="Share your ideas, goals, and what you're hoping to create..."></textarea>
              </div>
              
              <button type="submit" class="submit-button">
                Send Message
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M18 2L9 11L4 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </form>
          </div>
          
          <!-- Contact Info -->
          <div class="contact-info">
            <h3>Ways to Connect</h3>
            
            <div class="contact-methods">
              <div class="contact-method">
                <div class="method-icon">ðŸ“§</div>
                <div class="method-content">
                  <h4>Email</h4>
                  <p>hello@azorean.io</p>
                  <span>Best for project inquiries</span>
                </div>
              </div>
              
              <div class="contact-method">
                <div class="method-icon">ðŸŽµ</div>
                <div class="method-content">
                  <h4>Studio Bookings</h4>
                  <p>studio@azorean.io</p>
                  <span>Recording & audio services</span>
                </div>
              </div>
              
              <div class="contact-method">
                <div class="method-icon">ðŸŒŸ</div>
                <div class="method-content">
                  <h4>Community Events</h4>
                  <p>events@segundosol.com</p>
                  <span>Gatherings & collaborations</span>
                </div>
              </div>
            </div>
            
            <div class="response-time">
              <h4>Response Time</h4>
              <p>We typically respond within 24-48 hours. For urgent studio bookings, please mention this in your message.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Collaboration Areas -->
    <section class="collaboration">
      <div class="container">
        <h2 class="section-title">Collaboration Opportunities</h2>
        
        <div class="collab-grid">
          <div class="collab-card">
            <h3>Technology Partners</h3>
            <p>Working with purpose-driven tech companies, startups, and organizations building mindful digital experiences.</p>
            <ul>
              <li>App development & UX design</li>
              <li>AI/ML for wellness applications</li>
              <li>Digital meditation tools</li>
              <li>Community platform development</li>
            </ul>
          </div>
          
          <div class="collab-card">
            <h3>Artists & Musicians</h3>
            <p>Collaborating with conscious creators, sound healers, and artists who share our vision of transformative experiences.</p>
            <ul>
              <li>Album production & mixing</li>
              <li>Sound design projects</li>
              <li>Healing arts integration</li>
              <li>Experimental audio research</li>
            </ul>
          </div>
          
          <div class="collab-card">
            <h3>Event Organizers</h3>
            <p>Supporting intentional gatherings, retreats, and transformative events with our full range of services.</p>
            <ul>
              <li>Sound system design</li>
              <li>Ambient music curation</li>
              <li>Technology integration</li>
              <li>Community building tools</li>
            </ul>
          </div>
          
          <div class="collab-card">
            <h3>Research & Education</h3>
            <p>Partnering with institutions exploring consciousness, wellness technology, and the intersection of sound and healing.</p>
            <ul>
              <li>Academic research projects</li>
              <li>Educational content creation</li>
              <li>Workshop facilitation</li>
              <li>Innovation partnerships</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="values">
      <div class="container">
        <div class="values-content">
          <div class="values-text">
            <span class="section-label">Our Values</span>
            <h2>What Guides Our Work</h2>
            <p>
              Every collaboration begins with alignment on shared values. We believe in creating 
              work that serves human flourishing, supports conscious evolution, and contributes 
              to a more connected and compassionate world.
            </p>
            
            <div class="value-points">
              <div class="value-point">
                <span class="point-marker">â€¢</span>
                <span>Authenticity over perfection</span>
              </div>
              <div class="value-point">
                <span class="point-marker">â€¢</span>
                <span>Long-term relationships over one-time projects</span>
              </div>
              <div class="value-point">
                <span class="point-marker">â€¢</span>
                <span>Impact and meaning over pure profit</span>
              </div>
              <div class="value-point">
                <span class="point-marker">â€¢</span>
                <span>Sustainable practices in all our work</span>
              </div>
            </div>
          </div>
          
          <div class="values-visual">
            <div class="connection-animation">
              <div class="connection-node"></div>
              <div class="connection-node"></div>
              <div class="connection-node"></div>
